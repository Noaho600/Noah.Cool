  <title>Ultimate Sandwich Creator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      width: 100%;
      padding: 20px;
      background: #4CAF50;
      color: white;
      text-align: center;
      font-size: 24px;
      font-weight: bold;
    }

    .container {
      margin: 30px;
      display: flex;
      gap: 30px;
    }

    .ingredients, .sandwich, .scoreboard {
      background: white;
      border-radius: 20px;
      padding: 20px;
      box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
    }

    .ingredients {
      width: 200px;
    }

    .ingredients h2 {
      text-align: center;
      margin-bottom: 15px;
    }

    .ingredient {
      background: #e3e3e3;
      border-radius: 12px;
      padding: 10px;
      margin: 10px 0;
      text-align: center;
      cursor: grab;
    }

    .sandwich {
      width: 250px;
      height: 400px;
      border: 2px dashed #ccc;
      display: flex;
      flex-direction: column-reverse;
      align-items: center;
      justify-content: flex-start;
      overflow-y: auto;
    }

    .sandwich h2 {
      margin-bottom: 15px;
    }

    .sandwich-item {
      width: 180px;
      padding: 8px;
      margin: 5px 0;
      text-align: center;
