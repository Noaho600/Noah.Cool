      color: white;
      font-weight: bold;
    }

    .scoreboard {
      width: 200px;
      text-align: center;
    }

    .scoreboard h2 {
      margin-bottom: 15px;
    }

    #eatButton {
      margin-top: 20px;
      padding: 12px 20px;
      border: none;
      border-radius: 12px;
      background: #4CAF50;
      color: white;
      font-size: 16px;
      font-weight: bold;
